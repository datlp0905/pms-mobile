<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgStatus"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_lens_green_24dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDateInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Day: 12-01-1998"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtCalendarEffort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Calendar Effort: 50"
                android:textAppearance="?android:textAppearanceSmall"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtActuralEffort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Actural Effort: 50"
                android:textAppearance="?android:textAppearanceSmall"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtBuiableEffort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Buiable Effort: 50"
                android:textAppearance="?android:textAppearanceSmall"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Approved"
            android:textColor="@color/green" />

    </LinearLayout>

</RelativeLayout>